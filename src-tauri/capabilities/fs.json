{
  "identifier": "fs-capability",
  "description": "Allow reading and writing files for todo data and user-selected paths.",
  "windows": ["main", "main-*"],
  "permissions": [
    "fs:default",
    "fs:allow-read-file",
    "fs:allow-write-file","fs:allow-mkdir","fs:allow-stat","fs:allow-read-dir","fs:allow-remove",
    {
      "identifier": "fs:scope",
      "allow": [{ "path": "**" }]
    }
  ]
}
